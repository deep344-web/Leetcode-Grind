
int i = 0; j = 0;
// i and j are keeping track of window 

while(j < N){

           //calculations
            
            //if window size has not been hit yet then only try to hit the window size 
            if(j-i + 1 < K)  
            j++;
            

            //once the window size is hit then store the results aur update max min accordingly
            else if(j- i + 1 == K)
            {
                //store res
                // remove calculations of elements from the left side
                
                //increment the pointers and set a new window
                i++;
                j++;
            }
            
        }
