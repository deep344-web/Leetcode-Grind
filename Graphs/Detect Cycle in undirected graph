
Detect cycle using DFS by keeping track of parent of nodes  and if any adjacent node is found 
already visited and is not parent of current node then there is Cycle !!

bool dfs(vector<int> adj[], vector<int> &vis, int root, int parent){
        vis[root] = 1;
        
        for(int i : adj[root]){
            if(vis[i] == 0){
                if(dfs(adj, vis, i, root))
                return true;
            }
            
            else{
                if(i != parent)
                return true;
            }
        }
        
        return false;
    }